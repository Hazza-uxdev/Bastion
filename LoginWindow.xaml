<Window x:Class="SecureVault.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unlock Vault" Height="200" Width="350">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Master Password"/>
            <PasswordBox Name="PasswordBox" Margin="0,5"/>
            <Button Content="Unlock" Click="Unlock_Click"/>
        </StackPanel>
    </Grid>
</Window>