<Window x:Class="SecureVault.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entry" Height="250" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Title"/>
            <TextBox Name="TitleBox" Margin="0,5"/>
            
            <TextBlock Text="Username"/>
            <TextBox Name="UsernameBox" Margin="0,5"/>
            
            <TextBlock Text="Password"/>
            <StackPanel Orientation="Horizontal" Margin="0,5">
            <PasswordBox Name="PasswordBox" Width="200"/>
                <Button Content="Generate" Click="GeneratePassword_Click" Margin="5,0"/>
                <Button Content="Copy" Click="CopyPassword_Click" Margin="5,0"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Click="Ok_Click"/>
                <Button Content="Cancel" Width="75" Margin="5,0,0,0" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
